<Window x:Class="WpfTestMailSender.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTestMailSender"
        mc:Ignorable="d"
        Title="Сообщение" Height="198" Width="458" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="btnClose" Content="Закрыть" HorizontalAlignment="Center" Margin="0,0,0,19" Style="{DynamicResource ButtonStyle}" Width="206" IsDefault="True" IsCancel="True" Height="38" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="tbMessage" TextAlignment="Center" HorizontalAlignment="Center" Text="Сообщение очень длинное и содержательное" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="30" Width="438" Height="112" Margin="0,9,0,0"/>
    </Grid>
</Window>
