<UserControl x:Class="ControlsLibrary.FileInputBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlsLibrary"
             mc:Ignorable="d"
             x:Name="root">
    <DockPanel>
        <Button x:Name="btnBrowse" DockPanel.Dock="Right" Content="Browse" Click="btnBrowse_Click"/>
        <TextBox x:Name="tbFilename" MinWidth="{Binding ActualWidth, ElementName=btnBrowse}" Margin="0,0,2,0" Text="{Binding FileName, ElementName=root}"></TextBox>
    </DockPanel>
</UserControl>
